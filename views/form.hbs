<div class="container">
<form action="/add_session" method="POST" enctype="multipart/form-data">
        
    <div class="form-group">
        <label for="location">Plats</label>
        <input type="text" class="form-control form-control-lg required" id="location" name="location" placeholder="Plats…" required>
    </div>

    <div class="row">

        <div class="form-group col-6">
            <label for="duration">Duration</label>
            <input type="text" class="form-control required" id="duration" placeholder="Längd (timmar, minuter)" name="duration" required>
        </div>
        
        <div class="form-group col-6">        
            <label for="distance">Antal km</label>
            <input type="text" class="form-control" id="distance" placeholder="Distans (km)…" name="distance" required>
        </div>
    
    </div>
    
    <div class="row">
        
        <div class="form-group col-6">        
            <label for="shotsFired">Antal skott avlossade</label>
            <input type="text" class="form-control" id="shotsFired" placeholder="Antal skott avlossade…" name="shotsFired" required>
        </div>
        
        <div class="form-group col-6">        
            <label for="kills">Byte</label>
            <input type="text" class="form-control" id="kills" placeholder="Fällt byte…" name="kills" required>
        </div>
    
    </div>

    <div class="row">
        
        <div id="killTypesContainer" class="form-group col-12 initially-hidden">        
            <label for="animalType">Djurtyp</label>
            <input type="text" class="form-control" id="animalType" placeholder="Vilket djur?" name="animalType">
        </div>
    
    </div>

    <div class="form-group">        
        <textarea class="form-control" id="commentText" name="commentText" rows="3" placeholder="Några kommentarer?"></textarea>
    </div>
    
    <label class="btn btn-default btn-file">
        <span id="fileName"></span>
        Add photo 
        <input type="file" name="imageFile" id="imageFile" style="display: none;">
    </label>

    <!-- Metadata -->
    <input type="hidden" id="timestamp" value="{{timestamp}}" name="timestamp">
    <!-- End metadata -->

    <button type="submit" class="btn btn-primary">Submit</button>

</form>
</div>