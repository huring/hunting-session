<div class="container">
<form action="/add_session" method="POST">
        
    <div class="form-group">
        <label for="location">Plats</label>
        <input type="text" class="form-control required" id="location" name="location" placeholder="Plats…" required>
    </div>

    <div class="form-group">
        <label for="duration">Duration</label>
        <input type="text" class="form-control required" id="duration" placeholder="Längd (timmar, minuter)" name="duration" required>
    </div>
    
    <div class="form-group">        
        <label for="distance">Antal km</label>
        <input type="text" class="form-control" id="distance" placeholder="Distans (km)…" name="distance" required>
    </div>
    
    <div class="form-group">        
        <label for="shotsFired">Antal skott avlossade</label>
        <input type="text" class="form-control" id="shotsFired" placeholder="Antal skott avlossade…" name="shotsFired" required>
    </div>
    
    <div class="form-group">        
        <label for="kills">Byte</label>
        <input type="text" class="form-control" id="kills" placeholder="Fällt byte…" name="kills" required>
    </div>

    <!-- Metadata -->
    <input type="hidden" id="timestamp" value="{{timestamp}}" name="timestamp">
    <!-- End metadata -->

    <button type="submit" class="btn btn-primary">Submit</button>

</form>
</div>